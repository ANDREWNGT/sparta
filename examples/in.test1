# advect particles on uniform Cartesian grid
# single-step moves that cross grid cell boundaries are detected
# particle effectively moves from cell to cell
# particles reflect off global box boundaries

seed	    	    12345
dimension   	    3

boundary	    s s s
boundary_modify     xhi acc 1.0 temp 300.00
boundary_modify     xlo acc 1.0 temp 300.00
boundary_modify     yhi acc 1.0 temp 300.00
boundary_modify     ylo acc 1.0 temp 300.00
boundary_modify     zhi acc 1.0 temp 300.00
boundary_modify     zlo acc 1.0 temp 300.00
create_box  	    0 1.E-3 0 1.E-3 0 1.E-3
#create_grid 	    10 10 10
create_grid 	    100 100 100

species		    ../data/all.species N 
mixture		    air N vstream 0.0 0.0 0.0 temp 300.00 nrho 7.07043E22

create_molecules    air n 10000 


collisions	    vss air ../data/all.vss

timestep 	    7.E-9
compute             ke ke/molecule
variable            foo molecule x+y


#dump		    1 molecule 10 tmp.dump id type x y z
#stats_style	    step cpu nmol nattempt ncoll
#stats_style         step cpu nmol nattempt ncoll c_temp 
stats		    10
fix                 check grid/check 1
compute             temp temp
stats_style         step cpu nmol nattempt ncoll c_temp 
#f_in[1] f_in[2]
run 		    100
